<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    tools:ignore="MissingConstraints">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_single_data_item_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#E8DC72"
        app:cardCornerRadius="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|top"
                    android:text="Date: "
                    android:textAppearance="@style/date_14_05_"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/date_id_single_data_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:gravity="center_horizontal|top"
                    android:text="27.07.2022"
                    android:textAppearance="@style/date_14_05_"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                tools:layout_editor_absoluteX="15dp">


                <TextView
                    android:id="@+id/heart_id_text"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|top"
                    android:lineHeight="14.5dp"
                    android:text="Heart Rate: "
                    android:textAppearance="@style/date_14_05_"
                    android:textColor="@color/black"
                    android:textFontWeight="500" />

                <TextView
                    android:id="@+id/heatRate_id_single_data_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:gravity="center_horizontal|top"
                    android:text="92"
                    android:textAppearance="@style/date_14_05_"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
                tools:layout_editor_absoluteX="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView

                        android:id="@+id/Systolic_id_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal|top"
                        android:text="Blood Pressure : "
                        android:textAppearance="@style/date_14_05_"

                        android:textFontWeight="500" />

                    <TextView
                        android:id="@+id/Systolic_id_single_data_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:gravity="center_horizontal|top"
                        android:text="50"
                        android:textAppearance="@style/date_14_05_"

                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:id="@+id/dystolic_id_text"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal|top"
                        android:lineHeight="14.5dp"
                        android:text="/   "
                        android:textAppearance="@style/date_14_05_"

                        android:textFontWeight="500" />

                    <TextView
                        android:id="@+id/dystolic_id_single_data_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:gravity="center_horizontal|top"
                        android:text="92"
                        android:textAppearance="@style/date_14_05_"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/not_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:gravity="center_horizontal|top"
                        android:visibility= "invisible"
                        android:text="( NOT NORMAL )"
                        android:textAppearance="@style/date_14_05_"
                        android:textStyle="bold" />
                </LinearLayout>

                //
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>
